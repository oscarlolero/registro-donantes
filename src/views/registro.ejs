<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Registro</title>
    <style>
        .register-form * {
            display: block;
        }
    </style>
</head>
<body>
<form class="register-form" action="/register" method="POST">
    <input type="number" name="nua" placeholder="NUA" autocomplete="off" autofocus>
    <input type="text" name="first_name" placeholder="Nombre" autocomplete="off" autofocus>
    <input type="text" name="last_name" placeholder="Apellido" autocomplete="off" autofocus>
    <!--        <input type="email" name="email" placeholder="E-mail" autocomplete="off" autofocus>-->
    <input type="text" name="email" placeholder="E-mail" autocomplete="off" autofocus>
    <select name="career">
        <option value="0">Artes digitales</option>
        <option value="1">Ingeniería en comunicaciones y electrónica</option>
        <option value="2">Ingeniería eléctrica</option>
        <option value="3">Gestión empresarial</option>
        <option value="4">Ingeniería en mecatrónica</option>
        <option value="5">Ingeniería en sistemas computacionales</option>
        <option value="6">Doctorado/Maestría</option>
        <option value="7">Otro</option>
    </select>
    <select name="day" class="day" id="day">
        <option value="0">Seleccione un día...</option>
        <% var count = 0;
        Object.keys(dates).forEach(function (key, index) { %>
            <option value="<%= index + 1 %>"><%= key %></option>
        <% count++; }) %>
    </select>
    <select name="hour" class="hour" style="visibility:hidden;" disabled>
    </select>
    <button>Registrar</button>
</form>
</body>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    axios = window.axios;
    const daySelect = document.getElementsByClassName('day')[0];
    const hourSelect = document.getElementsByClassName('hour')[0];
    daySelect.addEventListener("change", async () => {
        if(parseInt(daySelect.value) !== 0) {
            hourSelect.style.visibility = "visible";
            const response = await axios.get(`${window.origin}/hours`);
            hourSelect.innerHTML = '<option value="0">Seleccione un horario...</option>';
            Object.entries(response.data)[daySelect.value - 1][1].forEach(hour => {
                hourSelect.insertAdjacentHTML('beforeend', `<option value="${hour}">${hour}</option>`)
            });
            hourSelect.disabled = false;
        } else {
            hourSelect.style.visibility = "hidden";
            hourSelect.disabled = true;
        }
    });
</script>
</html>